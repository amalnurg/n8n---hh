// Массив утренних мотивационных цитат
const morningQuotes = [
  "🔥 Сегодня твой день — бери его за горло!",
  "🚀 Проснулся? Значит, уже победил!",
  "✨ Доброе утро! Время действовать!",
  "☀️ Привет! Новый день — новые возможности!",
  "🔥 Твой день начинается!"
];

// Выбираем случайную цитату
const randomQuote = morningQuotes[Math.floor(Math.random() * morningQuotes.length)];

// Ваша ссылка на Google Таблицу (замените ВАША_ССЫЛКА_ТУТ на реальную)
const googleDocLink = "https://docs.google.com/document";

// Формируем итоговое сообщение
const message = `
${randomQuote}

🥰 Вот тут можешь вести записи откликов👇:
${googleDocLink}

✍️ Что для себя отмечать? 🙂:
- 🕧 Когда отправил отклик (дата)
- 🏢 Куда отправил (компания)
- 💼 На какую позицию (вакансия)
- 🛑/🟢/🟠 Статус (выбери: «в работе», «отправлено», «отказ», «интервью»)


Держи процесс под контролем! 🎯
`;

// Возвращаем сообщение для отправки в Telegram
return { message: message };
