// Ğ¤ÑƒĞ½ĞºÑ†Ğ¸Ñ Ğ¾Ğ±Ñ€Ğ°Ğ±Ğ¾Ñ‚ĞºĞ¸ HH.ru Ğ²Ğ°ĞºĞ°Ğ½ÑĞ¸Ğ¹
function processHHVacancies(vacancies) {
  return vacancies.map(vacancy => ({
    ...vacancy,
    source: 'HH.ru'
  }));
}

// ĞĞ±Ñ€Ğ°Ğ±Ğ°Ñ‚Ñ‹Ğ²Ğ°ĞµĞ¼ Ğ´Ğ°Ğ½Ğ½Ñ‹Ğµ Ğ¾Ñ‚ Ğ²ÑĞµÑ… Ğ¸ÑÑ‚Ğ¾Ñ‡Ğ½Ğ¸ĞºĞ¾Ğ²
let allVacancies = [];

// ĞĞ±Ñ€Ğ°Ğ±Ğ°Ñ‚Ñ‹Ğ²Ğ°ĞµĞ¼ HH.ru (items[0])
if (items[0]?.json?.items) {
  const hhVacancies = processHHVacancies(items[0].json.items);
  allVacancies = allVacancies.concat(hhVacancies);
}

console.log(`ğŸ“Š ĞŸĞ¾Ğ»ÑƒÑ‡ĞµĞ½Ğ¾ Ğ²Ğ°ĞºĞ°Ğ½ÑĞ¸Ğ¹ Ğ¾Ñ‚ HH.ru: ${allVacancies.length}`);

// Ğ¤Ğ˜Ğ›Ğ¬Ğ¢Ğ Ğ£Ğ•Ğœ ĞŸĞĞ¡Ğ›Ğ•Ğ”ĞĞ˜Ğ™ Ğ§ĞĞ¡
const oneHourAgo = new Date(Date.now() - 1 * 60 * 60 * 1000);
