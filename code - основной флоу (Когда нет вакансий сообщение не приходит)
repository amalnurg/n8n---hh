// Ğ£Ğ›Ğ£Ğ§Ğ¨Ğ•ĞĞĞĞ¯ Ñ„Ğ¸Ğ»ÑŒÑ‚Ñ€Ğ°Ñ†Ğ¸Ñ - Ğ¸Ñ‰ĞµĞ¼ Ğ²Ğ¾ Ğ²ÑĞµÑ… Ñ‚ĞµĞºÑÑ‚Ğ¾Ğ²Ñ‹Ñ… Ğ¿Ğ¾Ğ»ÑÑ… Ğ²Ğ°ĞºĞ°Ğ½ÑĞ¸Ğ¸
const manualOnlyVacancies = freshVacancies.filter(vacancy => {
  // Ğ¡Ğ¾Ğ±Ğ¸Ñ€Ğ°ĞµĞ¼ Ğ’Ğ•Ğ¡Ğ¬ Ñ‚ĞµĞºÑÑ‚ Ğ²Ğ°ĞºĞ°Ğ½ÑĞ¸Ğ¸ Ğ´Ğ»Ñ Ğ¿Ñ€Ğ¾Ğ²ĞµÑ€ĞºĞ¸
  const allText = `
    ${vacancy.name || ''}
    ${vacancy.description || ''}
    ${vacancy.snippet?.requirement || ''}
    ${vacancy.snippet?.responsibility || ''}
    ${vacancy.employer?.name || ''}
  `.toLowerCase();
  
  // ĞŸÑ€Ğ¾Ğ²ĞµÑ€ÑĞµĞ¼ Ğ½Ğ°Ğ»Ğ¸Ñ‡Ğ¸Ğµ Ğ»ÑĞ±Ñ‹Ñ… ÑÑ‚Ğ¾Ğ¿-ÑĞ»Ğ¾Ğ²
  const hasExcludedKeywords = excludeKeywords.some(keyword => 
    allText.includes(keyword.toLowerCase())
  );
  
  return !hasExcludedKeywords;
});

console.log(`ğŸ”§ Ğ ÑƒÑ‡Ğ½Ğ¾Ğµ Ñ‚ĞµÑÑ‚Ğ¸Ñ€Ğ¾Ğ²Ğ°Ğ½Ğ¸Ğµ Ğ¿Ğ¾ÑĞ»Ğµ Ñ„Ğ¸Ğ»ÑŒÑ‚Ñ€Ğ°Ñ†Ğ¸Ğ¸: ${manualOnlyVacancies.length}`);

// ğŸ”¥ Ğ£Ğ›Ğ£Ğ§Ğ¨Ğ•ĞĞĞĞ¯ Ğ”Ğ•Ğ”Ğ£ĞŸĞ›Ğ˜ĞšĞĞ¦Ğ˜Ğ¯ Ñ‡ĞµÑ€ĞµĞ· Set (Ğ±Ñ‹ÑÑ‚Ñ€ĞµĞµ)
const seenIds = new Set();
const uniqueVacancies = manualOnlyVacancies.filter(vacancy => {
  if (seenIds.has(vacancy.id)) return false;
  seenIds.add(vacancy.id);
  return true;
});

console.log(`âœ¨ Ğ£Ğ½Ğ¸ĞºĞ°Ğ»ÑŒĞ½Ñ‹Ğµ Ğ²Ğ°ĞºĞ°Ğ½ÑĞ¸Ğ¸: ${uniqueVacancies.length}`);

// Ğ•Ğ¡Ğ›Ğ˜ ĞĞ•Ğ¢ Ğ’ĞĞšĞĞĞ¡Ğ˜Ğ™ - Ğ’ĞĞ—Ğ’Ğ ĞĞ©ĞĞ•Ğœ ĞŸĞ£Ğ¡Ğ¢ĞĞ™ ĞœĞĞ¡Ğ¡Ğ˜Ğ’ (ĞĞ˜Ğ§Ğ•Ğ“Ğ ĞĞ• ĞĞ¢ĞŸĞ ĞĞ’Ğ›Ğ¯Ğ•Ğœ Ğ’ Ğ§ĞĞ¢)
if (uniqueVacancies.length === 0) {
  console.log('âŒ ĞĞµÑ‚ Ğ½Ğ¾Ğ²Ñ‹Ñ… Ğ²Ğ°ĞºĞ°Ğ½ÑĞ¸Ğ¹ Ğ·Ğ° Ğ¿Ğ¾ÑĞ»ĞµĞ´Ğ½Ğ¸Ğ¹ Ñ‡Ğ°Ñ - Ğ½Ğ¸Ñ‡ĞµĞ³Ğ¾ Ğ½Ğµ Ğ¾Ñ‚Ğ¿Ñ€Ğ°Ğ²Ğ»ÑĞµĞ¼');
  return []; // â† Ğ’ĞĞ¢ Ğ­Ğ¢Ğ Ğ“Ğ›ĞĞ’ĞĞĞ• Ğ˜Ğ—ĞœĞ•ĞĞ•ĞĞ˜Ğ•!
}

// Ğ¤Ğ¾Ñ€Ğ¼Ğ°Ñ‚Ğ¸Ñ€ÑƒĞµĞ¼ ÑĞ¾Ğ¾Ğ±Ñ‰ĞµĞ½Ğ¸Ñ (ÑÑ‚Ğ¾Ñ‚ ĞºĞ¾Ğ´ Ğ²Ñ‹Ğ¿Ğ¾Ğ»Ğ½ÑĞµÑ‚ÑÑ Ğ¢ĞĞ›Ğ¬ĞšĞ ĞµÑĞ»Ğ¸ ĞµÑÑ‚ÑŒ Ğ²Ğ°ĞºĞ°Ğ½ÑĞ¸Ğ¸)
const messages = uniqueVacancies.map(vacancy => {
  const salary = vacancy.salary ? 
    `${vacancy.salary.from || '?'}-${vacancy.salary.to || '?'} ${vacancy.salary.currency || 'RUR'}`.trim() : 
    'Ğ·/Ğ¿ Ğ½Ğµ ÑƒĞºĞ°Ğ·Ğ°Ğ½Ğ°';
  
  return `ğŸ†• ĞĞĞ’ĞĞ¯ Ğ’ĞĞšĞĞĞ¡Ğ˜Ğ¯
ğŸ¢ ${vacancy.employer?.name || 'ĞšĞ¾Ğ¼Ğ¿Ğ°Ğ½Ğ¸Ñ Ğ½Ğµ ÑƒĞºĞ°Ğ·Ğ°Ğ½Ğ°'}
ğŸ“ ${vacancy.name}
ğŸ’° ${salary}
ğŸ“ ${vacancy.area?.name || 'Ğ“Ğ¾Ñ€Ğ¾Ğ´ Ğ½Ğµ ÑƒĞºĞ°Ğ·Ğ°Ğ½'}
ğŸ”— ${vacancy.alternate_url || 'Ğ¡ÑÑ‹Ğ»ĞºĞ° Ğ½Ğµ ÑƒĞºĞ°Ğ·Ğ°Ğ½Ğ°'}
ğŸ“… ĞĞ¿ÑƒĞ±Ğ»Ğ¸ĞºĞ¾Ğ²Ğ°Ğ½Ğ°: ${new Date(vacancy.published_at).toLocaleString('ru-RU', {day: '2-digit', month: '2-digit', year: 'numeric', hour: '2-digit', minute: '2-digit'})}
ğŸ“Š ${vacancy.source}`;
});

